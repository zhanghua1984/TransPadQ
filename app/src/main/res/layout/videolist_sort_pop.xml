<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:background="@drawable/popwindow_background"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_update_time"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/popwindow_item_selector"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/icon_update_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="@string/music_popwindow_time"
                    android:textColor="#ffffff"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_file_name"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/popwindow_item_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/icon_file"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="@string/music_popwindow_name"
                    android:textColor="#ffffff"
                    android:textSize="13sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>